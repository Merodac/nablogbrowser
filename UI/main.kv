#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

RootLayout:
    orientation: 'vertical'
    id: root_layout
    canvas:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            source: 'data/images/background.jpg'
            pos: self.pos
            size: self.size


    BoxLayout:
        id: top_frame
        orientation: 'horizontal'
        height: 40
        size_hint_y: None
        canvas:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: status_label
            text: root_layout.title


    MyCenterLayout:
        id: center_page
        canvas:
            Color:
                rgb: 0.2, 0.15, 0.15
            Rectangle:
                size: self.size
                pos: self.pos

    BoxLayout:
        id: bottom_frame
        orientation: 'horizontal'
        height: 40
        size_hint_y: None
        canvas:
            Color:
                rgb: 0.2, 0.15, 0.15
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            id: start_load_button
            text: "Start!"
            on_release: root_layout.start_load_button_pressed()
        Label:
            id: status_label
            text: root_layout.state
        Label:
            id: page_count_label
            text: center_page.index_str
